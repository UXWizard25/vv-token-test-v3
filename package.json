{
  "name": "@marioschmidt/design-system-tokens",
  "version": "1.0.0",
  "description": "BILD Design System Token Pipeline with Style Dictionary - Multi-brand design tokens for BILD, SportBILD, and Advertorial",
  "main": "dist/js/index.js",
  "module": "dist/js/index.js",
  "types": "dist/js/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/js/index.d.ts",
      "import": "./dist/js/index.js"
    },
    "./themes": {
      "types": "./dist/js/themes/index.d.ts",
      "import": "./dist/js/themes/index.js"
    },
    "./primitives": {
      "types": "./dist/js/primitives/index.d.ts",
      "import": "./dist/js/primitives/index.js"
    },
    "./bild": {
      "types": "./dist/js/brands/bild/index.d.ts",
      "import": "./dist/js/brands/bild/index.js"
    },
    "./bild/colors": {
      "types": "./dist/js/brands/bild/colors.d.ts",
      "import": "./dist/js/brands/bild/colors.js"
    },
    "./bild/spacing": {
      "types": "./dist/js/brands/bild/spacing.d.ts",
      "import": "./dist/js/brands/bild/spacing.js"
    },
    "./bild/typography": {
      "types": "./dist/js/brands/bild/typography.d.ts",
      "import": "./dist/js/brands/bild/typography.js"
    },
    "./bild/effects": {
      "types": "./dist/js/brands/bild/effects.d.ts",
      "import": "./dist/js/brands/bild/effects.js"
    },
    "./bild/components": {
      "types": "./dist/js/brands/bild/components/index.d.ts",
      "import": "./dist/js/brands/bild/components/index.js"
    },
    "./bild/components/*": {
      "types": "./dist/js/brands/bild/components/*.d.ts",
      "import": "./dist/js/brands/bild/components/*.js"
    },
    "./sportbild": {
      "types": "./dist/js/brands/sportbild/index.d.ts",
      "import": "./dist/js/brands/sportbild/index.js"
    },
    "./sportbild/colors": {
      "types": "./dist/js/brands/sportbild/colors.d.ts",
      "import": "./dist/js/brands/sportbild/colors.js"
    },
    "./sportbild/spacing": {
      "types": "./dist/js/brands/sportbild/spacing.d.ts",
      "import": "./dist/js/brands/sportbild/spacing.js"
    },
    "./sportbild/typography": {
      "types": "./dist/js/brands/sportbild/typography.d.ts",
      "import": "./dist/js/brands/sportbild/typography.js"
    },
    "./sportbild/effects": {
      "types": "./dist/js/brands/sportbild/effects.d.ts",
      "import": "./dist/js/brands/sportbild/effects.js"
    },
    "./sportbild/components": {
      "types": "./dist/js/brands/sportbild/components/index.d.ts",
      "import": "./dist/js/brands/sportbild/components/index.js"
    },
    "./sportbild/components/*": {
      "types": "./dist/js/brands/sportbild/components/*.d.ts",
      "import": "./dist/js/brands/sportbild/components/*.js"
    },
    "./advertorial": {
      "types": "./dist/js/brands/advertorial/index.d.ts",
      "import": "./dist/js/brands/advertorial/index.js"
    },
    "./advertorial/spacing": {
      "types": "./dist/js/brands/advertorial/spacing.d.ts",
      "import": "./dist/js/brands/advertorial/spacing.js"
    },
    "./advertorial/typography": {
      "types": "./dist/js/brands/advertorial/typography.d.ts",
      "import": "./dist/js/brands/advertorial/typography.js"
    },
    "./css/*": "./dist/css/*",
    "./scss/*": "./dist/scss/*",
    "./json/*": "./dist/json/*",
    "./min": {
      "types": "./dist/js/index.d.ts",
      "import": "./dist/js.min/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist/",
    "README.md",
    "README.tokens.md",
    "LICENSE"
  ],
  "scripts": {
    "preprocess": "node scripts/tokens/preprocess.js",
    "build:tokens": "npm run preprocess && node scripts/tokens/build.js",
    "build:bundles": "node scripts/tokens/bundles.js",
    "build:stencil": "stencil build --config build-config/stencil/stencil.config.ts",
    "dev:stencil": "stencil build --dev --watch --serve --config build-config/stencil/stencil.config.ts",
    "build": "npm run build:tokens && npm run build:bundles",
    "build:all": "npm run build && npm run build:stencil",
    "watch": "nodemon --watch src/design-tokens --ext json --exec npm run build:tokens",
    "clean": "rm -rf dist tokens",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/UXWizard25/vv-token-test-v3.git"
  },
  "bugs": {
    "url": "https://github.com/UXWizard25/vv-token-test-v3/issues"
  },
  "homepage": "https://github.com/UXWizard25/vv-token-test-v3#readme",
  "keywords": [
    "design-tokens",
    "style-dictionary",
    "figma",
    "design-system",
    "bild",
    "sportbild",
    "css-variables",
    "scss",
    "tokens"
  ],
  "author": "UXWizard25",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@stencil/core": "^4.38.3",
    "@svgr/core": "^8.1.0",
    "@types/react": "^19.2.7",
    "fantasticon": "^3.0.0",
    "nodemon": "^3.0.1",
    "style-dictionary": "^4.2.0",
    "svg2vectordrawable": "^2.9.1",
    "svgo": "^4.0.0",
    "typescript": "^5.9.3"
  }
}
