{
  "name": "@marioschmidt/design-system-tokens",
  "version": "1.0.0",
  "description": "BILD Design System Token Pipeline with Style Dictionary - Multi-brand design tokens for BILD, SportBILD, and Advertorial",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./css/*": "./dist/css/*",
    "./scss/*": "./dist/scss/*",
    "./js/*": "./dist/js/*",
    "./json/*": "./dist/json/*",
    "./bundles/*": "./dist/bundles/*",
    "./package.json": "./package.json"
  },
  "files": [
    "dist/",
    "README.md",
    "README.tokens.md",
    "LICENSE"
  ],
  "scripts": {
    "preprocess": "node scripts/tokens/preprocess.js",
    "build:tokens": "npm run preprocess && node scripts/tokens/build.js",
    "build:bundles": "node scripts/tokens/bundles.js",
    "build": "npm run build:tokens && npm run build:bundles",
    "watch": "nodemon --watch src/design-tokens --ext json --exec npm run build:tokens",
    "clean": "rm -rf dist tokens",
    "prepublishOnly": "npm run build",
    "validate:snapshot:create": "node scripts/tokens/validate-outputs.js --create",
    "validate:snapshot:check": "node scripts/tokens/validate-outputs.js --check"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/UXWizard25/vv-token-test-v3.git"
  },
  "bugs": {
    "url": "https://github.com/UXWizard25/vv-token-test-v3/issues"
  },
  "homepage": "https://github.com/UXWizard25/vv-token-test-v3#readme",
  "keywords": [
    "design-tokens",
    "style-dictionary",
    "figma",
    "design-system",
    "bild",
    "sportbild",
    "css-variables",
    "scss",
    "tokens"
  ],
  "author": "UXWizard25",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@svgr/core": "^8.1.0",
    "@types/react": "^19.2.7",
    "fantasticon": "^3.0.0",
    "nodemon": "^3.0.1",
    "style-dictionary": "^4.2.0",
    "svg2vectordrawable": "^2.9.1",
    "svgo": "^4.0.0",
    "typescript": "^5.9.3"
  }
}
